<div id="accountadmin-new" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AccountModalLabel" aria-hidden="true">
    <div id="account-modal" class="modal-dialog">
        <div class="modal-content" style="background-color: #323b44">
            <div class="modal-header">
                <h4 class="modal-title">Add A New Account</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="Email" class="control-label">Email</label>
                        <input type="text" class="form-control" id="Email" data-bind="value: NewAccount().Email" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="Password" class="control-label">Password</label>
                        <input type="text" class="form-control" id="Password" data-bind="value: NewAccount().Password" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="checkbox checkbox-primary col-md-3 col-md-offset-3">
                    <input id="ArtistCheckBox" type="checkbox" data-bind="checked: NewAccount().IsArtist" />
                    <label for="ArtistCheckBox">Is Artist</label>
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-outline-success" data-bind="click: SaveNewAccount">Save New Account</button>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-warning" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>