<div class="wrapper-page" id="security-login">

    <div class="text-center">
        <label class="logo-lg ">Ink Peddler</label>
    </div>

    <form class="form-horizontal m-t-10">

        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="mdi mdi-account"></i></span>
                    </div>
                    <input class="form-control" type="email" placeholder="email" data-bind="value: Email">
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="mdi mdi-key"></i></span>
                    </div>
                    <input class="form-control" type="password" placeholder="password" data-bind="value: Password">
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-xs-12">
                <label class="text-danger" data-bind="text: ErrorMessage"></label>
            </div>
        </div>

        <div class="form-group text-right m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-primary btn-custom w-md waves-effect waves-light" type="submit" data-bind="click: ValidateAccount">
                    Log In
                </button>
            </div>
        </div>

    </form>
</div>