<section class="contactus-sec" id="contact" data-bind="with: CurrentVM()">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="title text-center">
                    <h3>Contact Us</h3>
                    <p>This killer tattoo app will revolutionize the way you find your next tattoo. We kinda think your gonna like it.</p>
                </div>
            </div>
            <div id="map"></div>
            <div class="w-100"></div>
            <div class="col-md-8 offset-md-2">
                <div class="inside-contact">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="contact-form">
                                <form id="contact-form" method="post" action="" role="form" data-bind="visible: !IsMessageSent()">
                                    <div class="messages"></div>
                                    <div class="form-group">
                                        <input id="form_name" type="text" name="name" placeholder="Your Full Name" required="required" data-error="Your name is required." data-bind="value: Name">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group">
                                        <input id="form_email" type="email" name="email" placeholder="Please Enter your email *" required="required" data-error="Valid email is required." data-bind="value: Email">>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group">

                                        <textarea id="form_message" name="message" placeholder="Write your message" rows="4" cols="10" required="required" data-error="Please, leave us a message." data-bind="value: Message">></textarea>
                                        <div class="help-block with-errors"></div>
                                    </div>

                                    <button type="submit" class="btn" data-bind="click: SendContactUsEmail">send</button>
                                </form>

                                <form data-bind="visible: IsMessageSent()">
                                    <br />
                                    <br />
                                    <div class="title text-center">
                                        <h3 class="text-success">Thank you</h3>
                                        <p class="text-success">We will be in touch shortly!</p>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="contact-details">
                                <div class="single-details">
                                    <img src="~/Content/img/icon/contact1.png" alt="" />
                                    <p>PO Box 2905 Sioux Falls, SD 57101</p>
                                </div>
                                <div class="single-details">
                                    <img src="~/Content/img/icon/contact3.png" alt="" />
                                    <p>info@inkpeddler.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-100"></div>
            <div class="col-md-12">
                <ul class="social-extra">
                    <li><a href="https://www.facebook.com/inkpeddlertattoofinder/" target="_blank" class="btn"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="https://www.instagram.com/inkpeddler/" target="_blank" class="btn"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</section>