<script type="text/html" id="TattooDetailTemplate">
    @* This is dependant on Shared/_CommentTemplate.cshtml (CommentTemplate) *@
    <div class="container post-container ip-container" id="">
        <div class="post-content">

            @*TATT TITLE*@
            <section>
                <div class="row text-center" id="gallery-title">
                    <div class="col-xs-12">
                        <h1>
                            <label data-bind="text: Tattoo().Name"></label>
                            <a data-bind="click: CopyUrlToClipboard">
                                <i class="fa fa-link" aria-hidden="true"></i>
                            </a>

                        </h1>
                    </div>
                    <div class="col-xs-12">
                        <a class="btn btn-ink" data-bind="visible: !Tattoo().Tatted(), click: TatIt">
                            Like it? Tat it!
                        </a>
                        <a class="btn btn-ink" data-bind="visible: Tattoo().Tatted(), click: TatIt">
                            Remove Tat
                        </a>
                    </div>
                </div>
            </section>

            @*GALLERY*@
            <section>
                <div class="row ip-container2">
                    <div class="col-xs-12 col-sm-8">
                        <div>
                            <img class="img-responsive" id="featured-tatt" data-bind="attr: { src: MainImg } " />
                        </div>
                        <div id="thumbs-container">
                            <div data-bind="foreach: Tattoo().Images">
                                <div id="gallery-thumbs">
                                    <a data-bind="click: $parent.ChangeImage">
                                        <img class="img-responsive" data-bind="attr: {src: StoragePath }" />
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Carousel
                        ================================================== -->
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img class="first-slide" src="/Content/img/test.jpg" alt="First slide">
                                </div>
                                <div class="item">
                                    <img class="second-slide" src="/Content/img/ProfilePic.png" alt="Second slide">
                                </div>
                                <div class="item">
                                    <img class="third-slide" src="/Content/img/20X20_tattoo_machine_GRAY.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div><!-- /.carousel -->
                    </div>


                    @*TAT STATS*@

                    <div class="col-xs-12 col-sm-4">
                        <div>
                            <h2  id="tat-stat" class="text-center ropa">Tat Stats</h2>
                            <hr />
                            <div class="well">
                                <ul>
                                    <li>
                                        Tattoo Views: <label data-bind="text: Tattoo().NumberOfViews"></label>
                                    </li>
                                    <li>
                                        Total Comments: <label data-bind="text: Tattoo().NumberOfComments"></label>
                                    </li>
                                    <li>
                                        Total Tats: <label data-bind="text: Tattoo().NumberOfTats"></label>
                                    </li>
                                    <li>
                                        <a data-bind="click:FlagInappropriate"> Flag this Tattoo as inappropriate</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="well text-center" id="tatt-tags">
                                <h2 class="ropa">Tags</h2>
                                <div data-bind="foreach: Tattoo().Styles">
                                    <span class="badge" data-bind="text: Name"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            @*TAT TALK*@
            <section class="section-margin">
                <h2 class="text-center ropa">Tat Talk</h2>
                @*<div data-bind="template: { name: 'CommentTemplate', foreach: Tattoo().Comments }"></div>*@<div data-bind="template: { name: 'CommentTemplate', foreach: Tattoo().Comments }"></div>
                <div data-bind="component: CommentsComponent"></div>
            </section>

            @*IS THIS YOUR WORK*@
            <section class="section-margin">
                <div class="row ip-container2">
                    <div class="col-sm-6 col-xs-12">
                        <h4 class="ropa text-center">Is this your work?</h4>
                        <div class="text-left" data-bind="template: {name: 'ArtistShortProfile', data: Artist, if: Artist().Username() }"></div>
                        <div data-bind="if: !Artist().Username() ">
                            <div data-bind="component: ArtistClaim"></div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xs-12 text-center">
                        <h4 class="ropa">Is this your tattoo?</h4>
                        <div data-bind="template: {name: 'CanvasShortProfile', data: Canvas, if: Canvas().Username()  }"></div>
                        <div data-bind="if: !Canvas().Username()">
                            <div data-bind="component: CanvasClaim"></div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</script>