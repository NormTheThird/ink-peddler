<script type="text/html" id="UserShortProfileTemplate">

    @*PROFILE SECTION*@
    <div class="col-xs-12 well">
        <div class="text-center">
            <div class="row">
                <div class="profile-top">
                    <img class="profile-img" data-bind="attr:{src: ProfileImage}">
                </div>
            </div>
            <h3 class="text-center">
                <label data-bind="text:NameDisplay" />
            </h3>
            <p>
                <strong>INKPeddler Since: </strong>
                <label data-bind="text: SinceDateDisplay" />
            </p>
            <div data-bind="if: Address().Address1()">
                <p><strong>Location : </strong></p>
                <p>
                    <label data-bind="html: Address().AddressDisplay" />
                </p>
            </div>
        </div>

        @*PROFILE EDIT SECTION*@
        <div id="user-edit-links" data-bind="if: $parent.CanEdit">
            <hr />
            <div class="row col-xs-12">
                <a data-bind="click: $parent.EditProfile"><i class="glyphicon glyphicon-edit"></i> Edit Profile</a>
            </div>
            <div class="row col-xs-12">
                <input id="profileImage" type="file" class="form-control" style="display:none" data-bind="event: { change: $parent.OnProfileImageChange }" />
                <a onclick="$('#profileImage').click();"><i class="glyphicon glyphicon-edit"></i> Change Profile Image</a>
            </div>
            <br />
            <br />
        </div>
    </div>

</script>
